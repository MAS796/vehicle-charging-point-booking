# Example Environment Variables
# Copy this file to .env and update with your values for local development

# Database Configuration
DATABASE_URL=sqlite:///./charging.db

# Backend Configuration
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost", "http://3.27.83.249"]

# Frontend Configuration
REACT_APP_API_URL=http://127.0.0.1:8000
REACT_APP_ENV=development

# Docker Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# AWS Configuration (if using AWS S3 for file uploads)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=ap-southeast-2

# Email Configuration (for sending booking confirmations)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Sentry Configuration (for error tracking - optional)
SENTRY_DSN=your-sentry-dsn

# Additional Features
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
DEBUG_MODE=false
